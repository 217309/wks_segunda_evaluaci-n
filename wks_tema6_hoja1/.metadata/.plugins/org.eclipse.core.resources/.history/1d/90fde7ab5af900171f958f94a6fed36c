import java.util.Scanner;
public class Indicador {

	// Los atributos se van a declarar privados por lo general. 
	private double maximo;
	private double minimo;
	private double valorActual;
	private String unidades;
	private String nombre;

	
	// El constructor y la clase tienen que llamarse igual
	// Asignamos todos los elementos menos el valorActual, es decir no lo pasamos como parametro.
	Indicador(double max, double min, String uni,String nom){
		this.maximo=max;
		this.minimo=min;
		this.unidades=uni;
		this.nombre=nom;
		
	}

	
// Tenemos que fijar en el set los valores maximos y minimos para que el usuario no los pueda manipular
	
	// AsignaciÃ³n del ValorActual
	
	
	
	public void setNombre(String nom){
	    this.nombre=nom;
	   }
	
	public String getNombre(){
		return this.nombre;
	   }
	
	public String getUnidades(){
		return this.unidades;
	   }
	
	
	public void setValorActual(double VA) {
	    this.valorActual=VA;

	}

	public double getMaximo() {
		return this.maximo;
	}

	public double getMinimo() {
		return this.minimo;
	}
	public double getValorActual(){
	     return this.valorActual;
	     }

	// metodo mostrar 
	
	   

	public void mostrarValorActual() {
		  System.out.println("El valor actual es : "+ this.getValorActual());
		
	}  
	       

	  
	       
	
	// metodo incrementarValorActual 
	
	public void incrementar(double cantidadSumada){
	    if(cantidadSumada+this.getValorActual()>getMaximo()){
	        this.setValorActual(getMaximo()); 
	          }
	       else{
	           this.setValorActual(cantidadSumada+this.getValorActual()); 
	          }
	       } 
	       
	// metodo reducir ValorActual    
	
	public void decrementar(double cantidadRetirada){
	    if(this.getValorActual()-cantidadRetirada<getMinimo()){
	        this.setValorActual(getMinimo()); 
	          }
	       else{
	           this.setValorActual(this.getValorActual()-cantidadRetirada); 
	          }
	       }


	



	}
	

	
	
	 


